@model ShopSolution.ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Xóa người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Xem danh sách </a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.id)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="id" type="hidden"/>
                    <input type="submit" value="Xóa User" class="btn btn-danger" /> |
                </form>
            </div>
        </div>
    </div>
</div>
